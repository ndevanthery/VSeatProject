@{
    <div class="container">
        <form action="https://google.com" method="post">
            <div class="imgcontainer">
                <img src="fonts/customerLogin.png" alt="Avatar" class="avatar">
            </div>

            <div class="container">
                <label for="uname"><b>Username</b></label>
                <input type="text" placeholder="Enter Username" id="userNameLogin" required>
                
                <label for="psw"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" id="UserPassword" required>
        
                <button type="submit" >Login</button>
               
                <button type="createAccountButton">Create an account</button>
            </div>
            
            <div class="container" style="background-color:#f1f1f1">
                <button type="button" class="cancelbtn">Cancel</button>
            </div>
        </form>
    </div>
    
}
