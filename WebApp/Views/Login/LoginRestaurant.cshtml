@model WebApp.Models.UserModel

<h4>Please login Restaurant</h4>
@Html.ActionLink("login as Customer ?", "Index", new { })
@Html.ActionLink("login as Staff ?", "LoginStaff", new { })

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginRestaurant">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />

                @Html.ActionLink("create Restaurant", "CreateRestaurant", new { })

            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
